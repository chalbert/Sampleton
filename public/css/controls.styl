.controls
  pos fixed auto 30px 12px 30px
  text-align center
  padding 8px
  goldenBox()

  &.closed
    //display none;
    bottom -100px

  li
    display inline-block
    padding 6px
    margin 0 5px
    border-radius 40px
    background #c47d30
    box-shadow inset 0 0 5px #f0daa2, 0 0 3px #693f12
    cursor pointer

    &.pushed
      box-shadow inset 0 0 10px #6e4111
      a
       opacity .65

    &:not(.pushed)
      &:hover
        box-shadow inset 0 0 6px #fff, 0 0 3px #693f12

  a
    display inline-block

.control-start
  a
    size 30px
    margin 5px 0px 5px 10px
    background url(/images/play.png) no-repeat

.control-pause
  a
    size 24px
    box-shadow inset 0 0 5px #000, 1px 1px 1px #c9ae6a
    background #333
    margin 8px

.control-trash
  float right
  a
    size 40px
    background url("/images/recycle-empty.png") no-repeat
    background-size 100%
    opacity .35

  &.active
    a
      opacity 1