.controls
  position absolute
  bottom 0
  left 0
  right 0
  background #ccc
  border-radius 10px
  padding 8px
  text-align center
  background linear-gradient(top, #dcaa75,  #c47d30, #c9c08f)
  box-shadow 0 0 4px #666, inset 0 -2px 8px #f2d5b7;

  li
    display inline-block
    padding 6px
    border-radius 40px
    background #c47d30
    box-shadow inset 0 0 5px #f0daa2, 0 0 3px #693f12
    cursor pointer
    margin 0 5px

    &.pushed
      box-shadow inset 0 0 10px #6e4111
      a
       opacity .65

    &:not(.pushed)
      &:hover
        box-shadow inset 0 0 6px #fff, 0 0 3px #693f12

  a
    display inline-block

.control-start
  a
    height 30px
    width 30px
    margin 5px 0px 5px 10px
    background url("/images/play.png") no-repeat

.control-pause
  a
    width 24px
    height 24px
    box-shadow inset 0 0 5px #000, 1px 1px 1px #c9ae6a
    background #333
    margin 8px

.control-trash
  float right
  a
    width 40px
    height 40px
    background url("/images/recycle-empty.png") no-repeat
    background-size 100%
    opacity .35

  &.active
    a
      opacity 1

