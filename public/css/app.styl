@import 'reset'
@import 'nib'
@import 'mixins'
@import 'logo'
@import 'searchbox'
@import 'controls'
@import 'records'
@import 'list'
@import 'item-list'
@import 'project-list'
@import 'messenger'
@import 'nav-top'

menu, nav
  li
    list-style none
    margin 0

body, input
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif

body
  background #7d6646 url(../images/bg-leather.jpg)

#logo
  logo()

.messenger
  absolute left 50% top 25px
  width 400px
  margin-left (-@width / 2) + 30

#container
  pos absolute 0
  min-size 500px 388px
  padding 10px 30px
  box-shadow inset 0 0 10px #c0b28b
  overflow hidden

#sampleton
  position relative
  size 100% 100%

.content
  pos absolute 54px 0 20px 0
  background #fff
  box-shadow inset 0 0 6px #99, 0 0 4px #666
  border-radius 10px
  border 8px #da9c39 solid
  z-index 10
  transition bottom .35s

  h1
    font-size $very-large

  &.module-project
    pos absolute 54px 0 85px 0

  &:after
    content ''
    display block
    pos absolute -8px
    border-radius 10px
    box-shadow inset 0 0 10px #fff
    z-index 4
  &:before
    content ''
    display block
    pos absolute 0
    box-shadow 0 0 4px #c47d30
    z-index 5

.btn-back
  display inline-block
  padding 4px 10px 4px 25px
  border-radius 40px
  background #c47d30
  box-shadow inset 0 0 5px #f0daa2, 0 0 3px #693f12
  cursor pointer
  type 14px #fff
  position relative

  &:after
    content ''
    absolute left 11px top 5px
    block 0
    borders top bottom 6px transparent right 6px #fff
    opacity .75

  &:hover
    box-shadow inset 0 0 6px #fff, 0 0 3px #693f12a