.searchbox
  position absolute
  right 40px
  top  38px
  z-index 20

.search-icon
  position absolute
  display block
  float left
  width 15px
  height 15px
  background url(../images/search.png)
  background-size 100%
  margin 4px 4px 0 7px

.search-input
  float left
  width 180px
  border 1px #ccc solid
  border-radius 12px
  box-shadow none
  -webkit-appearance: none;
  height 20px
  padding 0 20px 0 24px
  outline none
  transition width .4s
  &:focus
    box-shadow inset 1px 1px 3px #ddd

.search-reset
  border 0
  color #fff
  font-size 12px
  padding 0
  width 12px
  height 12px
  background url(../images/cancel.png)
  background-size 100%
  margin 5px 0 0 -20px
  position absolute
  z-index 30
  cursor pointer
  opacity .50
  &:hover
    opacity 1
  &.hidden
    display none