@import 'reset'
@import 'nib'
@import 'mixins'
@import 'logo'
@import 'messenger'
@import 'login-stage'
body
  background #7d6646 url(../images/bg-leather.jpg)
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif

#container
  pos absolute 0
  box-shadow inset 0 0 300px #000
  overflow hidden

#logo
  logo(67px)
  //width auto
  absolute left -18px top -50px
  //&.no-boot
  //  background-image none

h1
  type 28px #fff center
  text-shadow 0 0 2px #784813
  margin 5px 0 15px 0

.messenger
  margin 0 0 10px 0

#login
  absolute top 45% left 50%
  padding 0 0 20px 0
  width 350px
  min-height 225px
  margin (-@min-height / 2) 0 0 (-@width / 2)
  goldenBox()
  box-shadow inset 0 0 5px #f0daa2, 0 0 440px #fff
  z-index 10

  .field-wrapper
    padding 6px 6px
    border-radius 4px
    margin 4px 0
    background #fff
    border 1px #C47D30  solid
    box-shadow inset 0 0 4px #99, 0 0 7px #a59872

  input
    width 100%
    border 0
    margin 0
    padding 3px 0
    -webkit-appearance none
    font-size 14px
    outline none

  input[type=submit]
    padding 6px 0
    margin 20px 0 0 0
    border-radius 40px
    background #c01a04
    box-shadow inset 0 0 5px #f0daa2, 0 0 3px #693f12
    cursor pointer
    type 16px #fff

    &:hover
      box-shadow inset 0 0 6px #fff, 0 0 3px #693f12a

  .content
    position relative
    padding 20px 10px 10px 10px

  .link
    display block
    type 13px #fff center
    a
      text-decoration none
      &:hover
        text-decoration underline