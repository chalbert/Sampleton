@import 'reset'
@import 'nib'
@import 'searchbox'
@import 'controls'
@import 'records'
@import 'item-list'
@import 'messenger'

menu
  li
    list-style none
    margin 0

body, input
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif

body
  background #7d6646 url(../images/bg-leather.png)

#container
  position absolute
  min-width 500px
  padding 10px 30px
  top 0
  bottom 0
  left 0
  right 0
  min-height 388px
  box-shadow inset 0 0 10px #c0b28b

#sampleton
  position relative
  width 100%
  height 100%

#logo
  position relative
  z-index 10
  float left
  width 50px
  height 75px
  //font 40px 'Fredericka the Great', cursive
  z-index 100
  //font 50px 'Times new roman'
  font 66px 'Times new roman'
  color #fffab3
  //background rgba(254, 213, 116, .3) url(../images/gumboot-logo.png) 10px 12px no-repeat
  background url(../images/gumboot-logo.png) 10px 10px no-repeat
  background-size 51px 70px
  padding-left 53px
  letter-spacing 3px
  //height 50px
  margin-top -5px
  padding 0 10px 6px 45px
  //padding 0 10px 6px 10px
  border-radius 6px
  text-shadow  0 0 2px #784813
  z-index 200
  //-webkit-text-stroke: 1px #fbd7c3 ;
  &:after
    //text-shadow  0 -1px 4px #eaad36
    content 'Sampleton'
    position absolute
    left 44px
    top 0
    color #C47D30
    -webkit-mask-image -webkit-gradient(linear, left top, left bottom, color-stop(0.1, rgba(0,0,0,0.00)), color-stop(0.66, rgba(0,0,0,0.45)), color-stop(1, rgba(0,0,0,0.20)));
    -webkit-mask-image:-webkit-linear-gradient(top, rgba(0,0,0,0.00) 10%, rgba(0,0,0,0.45) 66%, rgba(0,0,0,0.20) 100%);
    -moz-mask-image:-moz-linear-gradient(top, rgba(0,0,0,0.00) 10%, rgba(0,0,0,0.45) 66%, rgba(0,0,0,0.20) 100%);





.content
  position absolute
  top 54px
  bottom 85px
  left 0
  right 0
  background #fff
  //padding 20px
  //border-radius 20px
  //border 2px #ccc solid
  //box-shadow 0 2px 10px #ccc
  box-shadow inset 0 0 6px #99, 0 0 4px #666
  //border-image url(../images/border-copper.jpg)
  border-radius 10px
  border 8px #da9c39 solid
  z-index 10
  &:after
    content ''
    display block
    position absolute
    top -8px
    left -8px
    right -8px
    bottom -8px
    border-radius 10px
    box-shadow inset 0 0 10px #fff
    z-index 4
  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    box-shadow 0 0 4px #c47d30
    z-index 5

.messagebox
  &.hidden
    display none