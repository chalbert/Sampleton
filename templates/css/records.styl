.records
  pos fixed 1000px 38px -10px 38px
  background #fff
  border-radius 16px 16px 0 0
  borders #333 8px 8px 0 8px
  z-index 10000
  box-shadow 0 0 12px #666, inset 0 0 6px #999

  h1
    font-size 22px
    width 90%
    margin 8px 0 6px 10px

  thead
    display none

.toolbar-records
  absolute top 12px right 10px
  li
    inline-block 16px
    margin 0 6px
  .btn-next, .btn-previous
    inline-block 100%
    background url(/images/play.png) center center no-repeat
    background-size 90%
    cursor pointer
  .btn-previous
    transform rotate(180deg)
  [disabled]
    opacity .35
    cursor default

#list-record
  pos absolute 33px 0 0 0
  overflow auto
  padding 0 0 25px 0
