@import 'reset'
@import 'nib'
@import 'mixins'
@import 'logo'
@import 'messenger'
@import 'login-stage'
body
  background #7d6646 url(../images/bg-leather.jpg)
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif

#container
  pos absolute 0
  box-shadow inset 0 0 300px #000
  overflow hidden
  vendor perspective 1000px
  vendor perspective-origin-x 50%
  vendor perspective-origin-y 50%

#logo
  logo(67px)
  absolute left -18px top -50px

h1, h2
  type 28px #fff center
  text-shadow 0 0 2px #784813
  margin 5px 0 15px 0

.messenger
  margin 0 0 10px 0

@keyframes flip
  0%
    transform rotateY(0)
  50%
    transform rotateY(-90deg)
  100%
    transform rotateY(-180deg)

@keyframes flap
  0%
    transform rotateY(-180deg)
  50%
    transform rotateY(-90deg)
  100%
    transform rotateY(0)

@keyframes show
  0%
    visibility hidden
  49%
    visibility hidden
  50%
    visibility visible

@keyframes hide
  0%
    visibility visible
  49%
    visibility visible
  50%
    visibility hidden

#login
  absolute top 45% left 50%
  width 350px
  min-height 225px
  margin (-@min-height / 2) 0 0 (-@width / 2)
  goldenBox()
  box-shadow inset 0 0 5px #f0daa2, 0 0 440px #fff
  z-index 10
  vendor box-sizing border-box
  transform rotateY(0)

  &.flip
    animation flip 1s
    transform rotateY(-180deg)

    .content
      animation hide 1s
      visibility hidden

    .details
      animation show 1s
      visibility visible

  &.flap
    animation flap 1s

    .content
      animation show 1s
      visibility visible

    .details
      animation hide 1s

  .field-wrapper
    padding 6px 6px
    border-radius 4px
    margin 4px 0
    background #fff
    border 1px #C47D30  solid
    box-shadow inset 0 0 4px #99, 0 0 7px #a59872

  input
    width 100%
    border 0
    margin 0
    padding 3px 0
    -webkit-appearance none
    font-size 14px
    outline none

  input[type=submit]
    padding 6px 0
    margin 20px 0 0 0
    border-radius 40px
    background #c01a04
    box-shadow inset 0 0 5px #f0daa2, 0 0 3px #693f12
    cursor pointer
    type 16px #fff

    &:hover
      box-shadow inset 0 0 6px #fff, 0 0 3px #693f12a

  .content
    position relative
    padding 20px 10px 45px 10px

  .link
    display block
    margin-top 10px
    type 13px #fff center
    a
      text-decoration none
      &:hover
        text-decoration underline

  .info
    background rgba(255, 255, 255, .35)
    border-radius 20px
    font-weight bold
    block 22px
    padding 4px 0 0 8px;
    box-sizing: border-box
    absolute bottom 4px right 4px
    color #af9d68
    font-family "Monotype corsiva"
    //text-shadow 1px 1px 1px #a5925b
    box-shadow 1px 1px 1px #c6b78b

    &:hover
      background rgba(255, 255, 255, .65)
      box-shadow inset 0 0 2px #c6b78b
      cursor pointer

  .details
    visibility hidden
    pos absolute 10px 0px 0 0px
    padding 10px
    transform rotateY(180deg)
    font-size 14px
    color #fff
    line-height 1.2

    p
      margin-bottom 10px

    footer
      absolute bottom 5px
      font-size 11px
      text-align center
      width 100%

    .email
      text-align center