.project
  pos absolute 0
  z-index 100
  padding 20px

  .btn-back, .btn-template
    float right
    margin 0 8px

#menu-template
  absolute right 5px top 52px
  size 200px 300px
  box-shadow 0 2px 12px #666
  padding 8px
  border-radius 4px;
  borders 3px #DA9C39
  background #fff
  type 12px
  display none
  z-index 1000

  &:after
    content ''
    block 0
    absolute left 135px top -10px
    borders left right transparent 10px bottom 10px #DA9C39

  ul
    borders top #eee
    margin 5px 0 0 0

  li
    borders bottom #eee
    position relative

    div
      padding 5px 2px

  .searchbox
    position static
    box-shadow none
    overflow hidden

  .search-input
    width 154px

  .link-templates
    pos absolute auto 0 0 0
    borders top #eec88c
    text-align center
    display block
    text-decoration underline
    padding 5px
    color #333
    background #fae1b9

  .active
    background #efe
    &:after
      content 'âœ“'
      type 17px #060
      border-radius 20px
      borders 2px #060
      block 16px
      absolute right 3px top 1px
      text-align center
      line-height 1.1

.has-template:not(.editing)
  #list-project
    right 37%

.editing
  #list-project
    .display
      display none
    li:hover
      .handle
        display block

.project:not(.editing)
  #list-project
    .edit
      display none
    .item
      cursor pointer

#list-project
  pos absolute 45px 16px 0 16px
  padding 0 5px
  overflow-y auto
  overflow-x hidden
  transition width .35s

  ul
    margin-right -20px
    padding 0
    display block
    clear both
    margin-top 12px

  &.selection
    .item:not(.selected)
      opacity .35

  .placeholder
    block 4px 140px
    float left
    background #444
    margin 0 2px 0 -8px

  .handle
    draggable()
    absolute left 50% top -25px
    margin-left -13px
    display none

  li
    list-style none
    block 140px
    float left
    margin 0 12px 0 0
    padding 4px 0 16px 0

    &.hidden
      display none

  .item
    position relative
    width 100%
    height 100%
    box-shadow 0 0 5px #888, inset 0 0 4px #fff
    border-radius 16px
    background linear-gradient(top, #eee, #ccc)
    transition opacity .35s

    &.selected
      box-shadow  0 0 12px #ffde00
      borders #ccc
      margin -1px

  .title, .field-title
    text-align center
    font-size 95%
    max-height 105px
    //overflow hidden
    padding 5px 3% 0 3%
    border 0
    //background transparent
    margin 0
    line-height 1
    font-size 15px

  .title
    width 94%

  .field-title
    padding 1px 8px 0 1px
    background #fff693
    border-radius 16px 16px 0 0
    borders bottom 2px #c9c08f dashed
    outline none

  .field-title:focus
    background #fff6c2
    box-shadow  0 0 8px #ffde00

  .counter
    position absolute
    bottom 5px
    left 10px
    right 10px
    text-align center
    borders 3px #999 #000 #333 #555
    border-radius 2px
    color #fff
    font-family "Courier New", Courier, monospace
    font-size 120%
    background: linear-gradient(top, #222, #999, #999,  #555);
    margin-top 4px
    box-shadow 0 2px 2px #777

  .pressed .item-counter
    box-shadow none
    background: linear-gradient(top, #333, #888, #888,  #444);

  .btn-history
    pos absolute auto 0 0 0
    text-decoration underline
    font-size 14px
    colors #333
    borders top #c17c22
    text-decoration none
    background linear-gradient(top, #dcaa75,  #c47d30, #c9c08f)
    padding 6px 2px 6px 2px
    text-align center
    display block
    border-radius 0 0 16px 16px
    text-shadow 1px 1px 1px #f0daa2
    cursor pointer

  .item-sorting
    position fixed
    block 136px auto
    text-align center
    font-size 15px
    line-heigth 18px
    background #fff693
    padding 4px
    list-style none
    margin 0 12px
    //margin 75px 0 0 40px
    box-shadow 2px 2px 6px #666
    z-index 10000
    border-radius 16px

    .edit, .counter
      display none

    .display
      display block
    .item
      background transparent
      box-shadow none

    .handle
      dragging()
      display block


.project-form
  width 0
  overflow hidden
  float right
  transition width .35s, visibility .35s
  borders left top #bbb 2px
  pos absolute 59px 0 0 auto
  visibility hidden
  padding 8px 10px
  font-size 12px
  background #f6f6f6
  box-shadow inset 0 0 10px #bbb

  .message
    text-align center
    padding 12px
    font-size 20px
    left 0
    right 0
    top 100px
    display none
    position absolute
    text-shadow 1px 1px 4px #999

  &.disabled
    .message
      display block

    &:before
      content ''
      pos absolute 0 0 0 0
      background #ccc
      opacity .1
      z-index 100

    >*:not(.message)
      opacity .25

  label
    white-space nowrap

  input[type="radio"], input[type="checkbox"]
    margin 6px 4px 10px 16px

  textarea
    width 96%
    height 60px

  input:not([type])
    width 96%

  h2
    type 18px #333
    font-weight bold

  table
    margin-top 12px
    transition opacity .35s
    width 100%

  tr
    borders bottom #eee

  td:first-child
    padding-right 4px

  td
    vertical-align top
    padding 3px 0

  td:first-child
    width 35%
    text-transform capitalize
    line-height 1.2

    padding-top 8px

  .submit-wrapper
    text-align center
    padding 8px 0



.has-template:not(.editing)
  .project-form
    opacity 1
    width 34%
    visibility visible
