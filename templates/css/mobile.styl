@import 'nib'
@import 'mixins'

// Login page

#login
  box-shadow none

@media only screen and (max-device-width: 480px) and (orientation: portrait)

  #login
    width auto
    height auto
    margin 0
    bottom 10px
    right 5%
    top 15%
    left 5%

    #logo
      font-size 53px
      line-height 78px


@media only screen and (device-height: 480px) and (orientation: landscape)

  #login
    top 5px
    margin-top 0

  #container
    overflow visible

// App

html
  font-size 18px

.list-table
  font-size 16px

  td
    padding-top 4px
    padding-bottom 4px

#container
  padding 0
  box-shadow none
  //min-width: 300px;
  //min-height: 288px;
  min-size 300px 288px

.content
  padding 5px

#sampleton

  .messenger

    margin-left -210px
    top auto
    bottom 0

    padding 10px
    z-index 1000000
    span
      font-size 20px

  >.searchbox
    z-index 1
    right 130px
    top 14px

    .search-icon
      margin-top 6px

    .search-input
      font-size 90%
      padding-top 2px
      padding-bottom 2px
      width 68px
      overflow hidden
      border-radius 10px
      transition margin .35s, width .35s
      border-radius 15px
      &:focus
        width 150px
        margin-right -14px
        box-shadow inset 1px 1px 3px #ddd, -1px -1px 4px #ddd

    .search-reset
      &:hover
        opacity .5

  #logo
    background-size contain
    background-position 0 0
    height 39px
    font-size 64px
    line-height 43px
    margin 5px 0 0 5px
    padding-left 18px
    width 34px
    overflow hidden
    z-index 1


  h1
    //font-size 18px
    //absolute top 12px
    width 75%
    margin 5px 0 8px 5px
    min-height 16px
    max-height 32px
    line-height 18px


  .project

    h1
      width auto
      clear both
      margin-top 40px

    .btn-back, .btn-template
      margin 0 4px

    .btn-template
      float none
      margin-right 45px

    .btn-back
      absolute left 2px

  .records
    h1
      width 70%
      margin-top 12px
      top 0


.project, .templates, .template
  padding 3px 5px

.nav-top
  top 10px
  z-index 1

  &:hover
    z-index 999999

  a
    font-size 18px
    padding 6px 12px


  li
    border-top 1px #666 solid

  li.btn-user

    &:after
      border-width 8px
      right 10px
      top 12px

    &:hover:after
      border-width 8px

    >a
      text-indent -10000px
      height 18px
      width 8px

    ul
      position absolute
      right 0
      background rgba(0, 0, 0, .65)
      z-index 99999

.projects

  .list-table
    margin-top 16px

.projects, .templates

  padding 7px 5px 0 5px


  .list-table
    td.date
      display none

.page-right-head

  //overflow: hidden
  //height 20px
  float right

  .field-new
    padding-top 0
    padding-bottom 0

.templates

  .btn-back
    margin-right 2px

  .page-right-head
    height 40px

.project, .templates, .template

  .page-right-head
    padding-top 3px

  .field-new
    //float right
    absolute right 5px top 5px

.field-new
  font-size 16px
  height 29px
  width 38px
  min-width 0
  //absolute right 2px
  border-radius 0
  borders #ccc
  -webkit-appearance: none
  transition width .5s
  z-index 999
  text-align left

  &:focus
    width 280px
    box-shadow 2px 2px 4px #666
    padding-left 4px


.btn-back
  &:after
    border-width 6px
    left 6px
    top 8px

.btn-back, .btn-template
  //size 20px
  border-radius 0
  height 21px
  //padding 0 2px
  //font-size 0
  font-size 16px
  padding-left 18px
  padding-right 6px
  line-height 1.3

.btn-template
  padding-left 28px
  background-position 0 -1px
  background-size contain

.editing
  #list-project
    .handle
      display none

#list-project
  left 5px
  right 0
  top 56px

  ul
    margin-right 0

  .item
    width auto

  .placeholder
    block 4px 75px

  .dropzone
    absolute left -5px top -1px

    span
      background #eee
      border-radius 12px

  img
    border-radius 12px
    block 47px

  li:not(.placeholder)
    width auto
    float none
    height 48px
    margin 0 0 0 0
    padding-bottom 2px

  .btn-history
    left 40px
    border-bottom-left-radius 0

  .counter
    left 50px

  .edit, .display
    margin-left 40px

  .field-title
    border-top-left-radius 0

.item-title
  height 53px
  line-height .9

.records
  left 3px
  right 3px
  z-index 9999999

  &.opened
    top 15px

#menu-template
  top 32px
  right 0
  bottom 0
  height auto

  &:after
    left auto
    right 5px

.content
  bottom 0
  border-width 4px

.content.view-project
  bottom 65px

.controls
  position absolute
  bottom 5px
  left 5px
  right 5px
  padding 4px 4px 4px 20px

  li
    padding 6px

.control-start
  margin 0 15px 160px 0
  a
    size 23px
    margin 3px 0px 2px 7px
    background-size contain

.control-pause
  a
    size 18px
    background #333
    margin 5px

.control-trash
  a
    size 28px

.list-default
  font-size 12px

.template
  overflow hidden

#list-fields
  width 94%

  td
    >.handle
      opacity 1
      margin 27px 0 0 10px

  td:first-child
    width 30px

  td:last-child
    position absolute
    left 3px
    margin-bottom 2px

  td:nth-child(0)
    position absolute

  td:nth-child(n+2)
    display block

#template-preview
  position absolute
  width 90%
  left 92%
  bottom 5px
  top 30px
  box-shadow 0 3px 8px #999
