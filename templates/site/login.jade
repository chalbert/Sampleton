
section#login
  #logo.no-boot
    | Sampleton
  .content
    h1 Sampling made simple
    form(action="", method="post")
      - if ($formError)
        p.messenger
          span.message= $formError.message
      .field-wrapper
        - var $email = $email || 'demo'
        input.field-user(name="email", placeholder="Your email", value=$email)
      .field-wrapper
        input.field-password(type="password", name="password", placeholder="Your password", value="demo")

      input.btn-submit(type="submit", value="Sign in")

    //.link
